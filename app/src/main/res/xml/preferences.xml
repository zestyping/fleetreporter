<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

  <EditTextPreference
      android:key="pref_recording_interval"
      android:title="Recording interval"
      android:summary="Maximum minutes between recorded points"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="10" />

  <EditTextPreference
      android:key="pref_recording_interval_after_go"
      android:title="Recording interval upon starting to move"
      android:summary="Minutes after departing from a stop to record an extra point"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="1" />

  <EditTextPreference
      android:key="pref_settling_period"
      android:title="Settling period"
      android:summary="Minutes of not moving to interpret as a stop"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="2" />

  <ca.zesty.fleetreporter.TimePreference
      android:key="pref_sleep_start"
      android:title="Sleep starting time"
      android:summary="Start of daily period when reporting is suppressed" />

  <ca.zesty.fleetreporter.TimePreference
      android:key="pref_sleep_end"
      android:title="Sleep ending time"
      android:summary="End of daily period when reporting is suppressed" />

  <EditTextPreference
      android:key="pref_sms_purchasing_interval"
      android:title="SMS purchasing interval"
      android:summary="Minutes after an SMS purchase to hold off purchasing again"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="60" />

  <PreferenceScreen
    android:title="Developer settings">

    <CheckBoxPreference
        android:key="pref_show_log"
        android:title="Show message log"
        android:defaultValue="false" />

    <ca.zesty.fleetreporter.TimePreference
        android:key="pref_daily_relaunch_time"
        android:title="Daily relaunch time"
        android:summary="Daily time to shut down and relaunch the app" />

    <CheckBoxPreference
        android:key="pref_simulate_gps_outage"
        android:title="Simulate GPS outage"
        android:summary="Behave as though there is no GPS fix" />
        android:defaultValue="false" />

    <EditTextPreference
        android:key="pref_destination_number"
        android:title="Destination number"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

    <EditTextPreference
        android:key="pref_reporter_label"
        android:title="Reporter label"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

    <EditTextPreference
        android:key="pref_reporter_id"
        android:title="Reporter ID"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

  </PreferenceScreen>

</PreferenceScreen>
