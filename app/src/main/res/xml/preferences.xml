<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings">

  <EditTextPreference
      android:key="pref_daily_point_sms_limit"
      android:title="@string/pref_daily_point_sms_limit"
      android:summary="@string/pref_daily_point_sms_limit_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="24" />

  <EditTextPreference
      android:key="pref_recording_interval_resting"
      android:title="@string/pref_recording_interval_resting"
      android:summary="@string/pref_recording_interval_resting_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="30" />

  <EditTextPreference
      android:key="pref_recording_interval_moving"
      android:title="@string/pref_recording_interval_moving"
      android:summary="@string/pref_recording_interval_moving_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="10" />

  <EditTextPreference
      android:key="pref_recording_interval_after_go"
      android:title="@string/pref_recording_interval_after_go"
      android:summary="@string/pref_recording_interval_after_go_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="2" />

  <EditTextPreference
      android:key="pref_reporting_interval_gps_outage"
      android:title="@string/pref_reporting_interval_gps_outage"
      android:summary="@string/pref_reporting_interval_gps_outage_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="30" />

  <EditTextPreference
      android:key="pref_resting_radius"
      android:title="@string/pref_resting_radius"
      android:summary="@string/pref_resting_radius_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="40" />

  <EditTextPreference
      android:key="pref_settling_period"
      android:title="@string/pref_settling_period"
      android:summary="@string/pref_settling_period_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="2" />

  <ca.zesty.fleetreporter.TimePreference
      android:key="pref_sleep_start"
      android:title="@string/pref_sleep_start"
      android:summary="@string/pref_sleep_start_summary" />

  <ca.zesty.fleetreporter.TimePreference
      android:key="pref_sleep_end"
      android:title="@string/pref_sleep_end"
      android:summary="@string/pref_sleep_end_summary" />

  <EditTextPreference
      android:key="pref_sms_purchase_interval"
      android:title="@string/pref_sms_purchase_interval"
      android:summary="@string/pref_sms_purchase_interval_summary"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="60" />

  <PreferenceScreen
    android:title="@string/pref_developer_settings">

    <CheckBoxPreference
        android:key="pref_show_log"
        android:title="Show message log"
        android:defaultValue="false" />

    <EditTextPreference
        android:key="pref_stable_max_accuracy"
        android:title="Stable maximum accuracy"
        android:summary="Maximum accuracy of a fix accepted as stable, in meters"
        android:numeric="decimal"
        android:inputType="numberDecimal"
        android:defaultValue="60" />

    <EditTextPreference
        android:key="pref_stable_max_speed"
        android:title="Stable maximum speed"
        android:summary="Maximum speed of a fix accepted as stable, in km/h"
        android:numeric="decimal"
        android:inputType="numberDecimal"
        android:defaultValue="5" />

    <ca.zesty.fleetreporter.TimePreference
        android:key="pref_daily_relaunch_time"
        android:title="Daily relaunch time"
        android:summary="Daily time to shut down and relaunch the app" />

    <CheckBoxPreference
        android:key="pref_simulate_gps_outage"
        android:title="Simulate GPS outage"
        android:summary="Behave as though there is no GPS fix" />
        android:defaultValue="false" />

    <EditTextPreference
        android:key="pref_destination_number"
        android:title="Destination number"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

    <EditTextPreference
        android:key="pref_reporter_label"
        android:title="Reporter label"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

    <EditTextPreference
        android:key="pref_reporter_id"
        android:title="Reporter ID"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

  </PreferenceScreen>

</PreferenceScreen>
